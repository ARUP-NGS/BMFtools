    MainSubparser.add_argument(
        "--ref",
        "-r",
        help="Path to reference index. Can be indicated by the config file.")
    MainSubparser.add_argument(
        "--abrapath",
        help="Path to abra jar. Can be indicated by the config file.")
    MainSubparser.add_argument(
        "--p3Seq", help="3' primer sequence for cutadapt.")

        required=True)
    GetUniqueKmerBedParser.add_argument(
        "--aligner", "-a",
        metavar="aligner",
        help="Aligner program (e.g. takes bwa 'mem' or bowtie 'bwt').",
        type=str,
        required=True)
    GetUniqueKmerBedParser.add_argument(
        "-k", "--kmer", help=("Length of unique sequence groups (kmers) "
